{
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node20/tsconfig"],
  "compilerOptions": {
    "noEmit": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "#utils/*": ["./lib/utils/*"],
      "#stacks/*": ["./lib/stacks/*"],
      "#stages/*": ["./lib/stages/*"],
      "#constructs/*": ["./lib/constructs/*"]
    }
  },
  "include": ["bin", "lib", "src", "*.js", "*.ts"]
}
